<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080.0">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="6"
        android:useLevel="false">
        <size
            android:width="26dp"
            android:height="26dp" />
        <gradient
            android:endColor="@color/purple_btn_bg"
            android:startColor="@color/main_bg_color"
            android:type="sweep" />
    </shape>
</rotate>